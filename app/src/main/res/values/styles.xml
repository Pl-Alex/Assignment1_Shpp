<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="opensans" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Assignment1.BorderedButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="cornerRadius">6dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">10.1dp</item>
        <item name="android:paddingBottom">10.1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Assignment1.ColorButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="cornerRadius">6dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint</item>
        <item name="buttonIconTint">@color/button_icon_tint</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

</resources>